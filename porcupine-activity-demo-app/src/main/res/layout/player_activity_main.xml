<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77A5B4"
    tools:context=".player_MainActivity">

    <!--    <View-->
<!--        android:id="@+id/seekBarOverlay"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@android:color/transparent"-->
<!--        android:clickable="true"-->
<!--        android:focusable="true"-->
<!--        android:layout_centerInParent="true"/>-->

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/local_music_bottom_layout"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:elevation="4dp"
        android:minHeight="10dp"/>

    <RelativeLayout
        android:id="@+id/local_music_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#33EEEEEE">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9933FA" />

        <ImageView
            android:id="@+id/local_music_iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/attack" />

        <TextView
            android:id="@+id/local_music_tv_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/local_music_iv_icon"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/local_music_tv_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/local_music_tv_song"
            android:layout_alignLeft="@id/local_music_tv_song"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/local_music_iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/next_song" />

        <ImageView
            android:id="@+id/local_music_iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/local_music_iv_next"
            android:src="@mipmap/icon_play" />

        <ImageView
            android:id="@+id/local_music_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/local_music_iv_play"
            android:src="@mipmap/last_song" />


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/local_music_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/local_music_bottom_layout">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/go_back"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="30dp"
        android:text="back"
        android:textSize="8sp" />

</RelativeLayout>


